<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.RecuperarPasswordActivity"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/foso"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REESTABLECE TU CONTRASEÑA"
            android:padding="10dp"
            app:autoSizeTextType="uniform"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/resetPassEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa tu Email"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            />

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical">


        <Button
            android:id="@+id/resetPassBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:text="REESTABLECER CONTRASEÑA"
            ></Button>


    </LinearLayout>